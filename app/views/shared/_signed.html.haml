%hr/

-# list users signed for this activity
#signed
  %table
    -if !@signed.any?
      %p Nikt siÄ™ jeszcze nie zapisaÅ‚.
    -else
      %p Zapisani

      -@signed.each do |signed|

        -user = User.find_by(id: signed.user_id)

        %a{ :href => "#{user_path(user)}" }
          -if (signed.confirmed?)
            %img{ :style => "border-radius:50%; border: 4px solid lime; box-shadow: 0px 0px 40px lime", :src => "#{user.image}" }
          -else
            %img{ :style => "border-radius:50%; border: 4px solid yellow; box-shadow: 0px 0px 40px yellow", :src => "#{user.image}" }

        = user.name
        = user.lastname

%hr/ 